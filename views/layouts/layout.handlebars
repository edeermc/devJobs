<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/trix.css">
    <link rel="stylesheet" href="/css/app.css">
    <title>{{ nombrePagina }}</title>
</head>
<body>
    <div class="nombre-sitio contenedor">
        <h1>
            <a href="/">devJobs</a>
        </h1>

        {{#if barra }}
            <div class="buscador">
                <form action="/buscador" method="POST">
                    <input type="text" name="q" class="buscar">
                    <input type="submit" value="Buscar">
                </form>
            </div>
        {{/if }}
        {{#if cerrarSesion}}
            <div class="cerrar-sesion">
                <p>Hola {{nombre}}!</p>
                {{#if imagen}}
                    <img src="/uploads/perfiles/{{imagen}}" class="admin-perfil">
                {{/if}}
                <a href="/administracion">Administración</a>
                <a href="/cerrar-sesion">Cerrar sesión</a>
            </div>
        {{/if}}
    </div>

    <div class="site-header contenedor separador">
        <h2>{{ nombrePagina }}</h2>
        {{#if tagline }}
            <p class="tagline">{{ tagline }}</p>
        {{/if }}
        {{#if boton }}
            <a href="/vacantes/nueva" class="btn btn-azul">Publicar nueva vacante</a>
        {{/if }}
    </div>

    <div class="contenido-principal contenedor">
        {{#if mensajes}}
            <div class="alertas">
                {{#mostrarAlertas mensajes}}
                {{/mostrarAlertas}}
            </div>
        {{/if}}
        {{{ body }}}
    </div>

    <script src="/js/trix.js"></script>
    <script src="/dist/bundle.js"></script>
</body>
</html>